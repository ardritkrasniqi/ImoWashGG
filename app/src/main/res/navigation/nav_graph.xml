<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ardritkrasniqi.imowashgg.ui.loginFragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_workFragment"
            app:destination="@id/workFragment" />
        <action
            android:id="@+id/action_loginFragment_to_adminPanel"
            app:destination="@id/adminPanel" />
    </fragment>
    <fragment
        android:id="@+id/workFragment"
        android:name="com.ardritkrasniqi.imowashgg.ui.workFragment.WorkFragment"
        android:label="WorkFragment" />
    <fragment
        android:id="@+id/adminPanel"
        android:name="com.ardritkrasniqi.imowashgg.ui.AdminPanel"
        android:label="AdminPanel" />
</navigation>